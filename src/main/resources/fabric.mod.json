{
  "schemaVersion": 1,
  "id": "better-looms",
  "version": "${version}",
  "name": "Better Looms",
  "description": "Mod to improve upon the native loom UI",
  "authors": [
    "FridayFaerie"
  ],
  "contact": {
    "homepage": "https://github.com/FridayFaerie/better-looms",
    "sources": "https://github.com/FridayFaerie/better-looms"
  },
  "license": "MIT",
  "icon": "assets/better-looms/icon.png",
  "environment": "*",
  "accessWidener": "better-looms.accesswidener",
  "entrypoints": {
    "main": [
      "fridayfaerie.betterlooms.BetterLooms"
    ],
    "client": [
      "fridayfaerie.betterlooms.BetterLoomsClient"
    ],
    "modmenu": [
      "fridayfaerie.betterlooms.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "better-looms.mixins.json",
    {
      "config": "better-looms.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.18.4",
    "minecraft": "~1.21.10",
    "java": ">=21",
    "fabric-api": "*"
  }
}
